<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/bg_gary"
              android:elevation="2dp"
              android:orientation="vertical"
              android:paddingBottom="4dp"
              android:layout_marginRight="@dimen/images_padding"
              android:layout_marginBottom="@dimen/images_padding"
              android:translationZ="2dp">

    <com.lyl.smzdk.view.MyImageView
        android:id="@+id/item_images_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:transitionName="image"
        app:actualImageScaleType="fitXY"/>

    <TextView
        android:id="@+id/item_images_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="如果大家觉得这种多布局方式有点由于耦合了实体类，还有支持另外一种多布局方式具体可查看"
        android:textColor="@color/black"/>

</LinearLayout>
