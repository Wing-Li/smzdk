<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/search_actionbar"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_main_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:text="这是一个图"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:transitionName="content_title"/>

            <TextView
                android:id="@+id/item_main_content_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:text="你别管我"
                android:textColor="@color/black_flee"
                android:textSize="14sp"/>

            <com.lyl.smzdk.view.imageview.MyImageView
                android:id="@+id/item_main_content_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gary_bg_img"
                app:actualImageScaleType="fitXY"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>
